<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/tv_LoginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="请登录"
        android:textSize="60sp"/>

    <TextView
        android:id="@+id/tv_account"
        android:layout_width="100dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/tv_LoginTitle"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:gravity="center_vertical"
        android:text="账号:"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/et_userAccount"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:hint="账号/邮箱号/手机号"
        app:layout_constraintTop_toTopOf="@id/tv_account"
        app:layout_constraintLeft_toRightOf="@id/tv_account"
        android:layout_marginLeft="20dp"  />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="100dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/tv_account"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:gravity="center_vertical"
        android:text="密码:"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/et_userPassword"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:hint="密码"
        app:layout_constraintTop_toTopOf="@id/tv_password"
        app:layout_constraintLeft_toRightOf="@id/tv_password"
        android:layout_marginLeft="20dp"  />

    <Button
        android:id="@+id/btn_Login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@color/colorPrimaryDark"
        android:text="登录"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_password" />
</androidx.constraintlayout.widget.ConstraintLayout>